<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cLayoutComplete"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_center"
    android:theme="@style/AppTheme"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/tViewNameCri"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Nombre de Evaluacion"
        android:textColor="@color/primary"
        android:textSize="@dimen/textsize_primary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tViewPorcentaje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tViewPorcentaje"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="50%"
        android:textAlignment="textEnd"
        android:textColor="@color/primaryDark"
        android:textSize="@dimen/textsize_primary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tViewNameCri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tViewNameCri" />

    <ImageView
        android:id="@+id/iViewCarita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tViewPorcentaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tViewPorcentaje"
        app:srcCompat="@drawable/ic_good_24dp"
        android:contentDescription="TODO" />


</androidx.constraintlayout.widget.ConstraintLayout>
