<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cLayoutComplete"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_center"
    android:theme="@style/AppTheme">

    <TextView
        android:id="@+id/tViewNameCri"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Nombre de Criterio"
        android:textColor="@color/primaryDark"
        android:textSize="@dimen/textsize_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iViewFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tViewNameCri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tViewNameCri"
        app:srcCompat="@drawable/ic_camera_enhance_celeste_24dp" />

    <EditText
        android:id="@+id/eTextEntero"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/shadow_center"
        android:ems="10"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text=""
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iViewFoto"
        app:layout_constraintStart_toEndOf="@+id/iViewFoto"
        app:layout_constraintTop_toTopOf="@+id/iViewFoto" />

    <EditText
        android:id="@+id/eTextDecimal"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/shadow_center"
        android:ems="10"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/iViewFoto"
        app:layout_constraintStart_toEndOf="@+id/iViewFoto"
        app:layout_constraintTop_toTopOf="@+id/iViewFoto" />

    <TextView
        android:id="@+id/tViewPorcentajeCri"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:text="0%"
        android:textAlignment="textEnd"
        android:textColor="@color/primaryDark"
        android:textSize="@dimen/textsize_primary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/eTextEntero"
        app:layout_constraintEnd_toStartOf="@+id/iViewCarita"
        app:layout_constraintTop_toTopOf="@+id/eTextEntero" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text=":"
        app:layout_constraintBottom_toBottomOf="@+id/tViewNameCri"
        app:layout_constraintEnd_toStartOf="@+id/tViewNfotos"
        app:layout_constraintTop_toTopOf="@+id/tViewNameCri" />

    <ImageView
        android:id="@+id/iViewCarita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tViewPorcentajeCri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tViewPorcentajeCri"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_good_24dp" />

    <TextView
        android:id="@+id/tViewNfotos"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:textStyle="bold"
        android:textSize="@dimen/textsize_tertiary"
        android:text="9+"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/iViewFoto"
        app:layout_constraintEnd_toStartOf="@+id/iViewFoto"
        app:layout_constraintTop_toTopOf="@+id/iViewFoto" />

    <TextView
        android:id="@+id/tViewSPorcentajeCri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="%"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/textsize_primary"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/eTextDecimal"
        app:layout_constraintStart_toEndOf="@+id/eTextDecimal"
        app:layout_constraintTop_toTopOf="@+id/eTextDecimal" />


    <EditText
        android:id="@+id/eTextTexto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_center"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text=""

        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iViewFoto"
        app:layout_constraintEnd_toStartOf="@+id/iViewCarita"
        app:layout_constraintStart_toStartOf="@+id/eTextDecimal"
        app:layout_constraintTop_toTopOf="@+id/iViewFoto" />

    <EditText
        android:id="@+id/eTextEntero2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_center"
        android:ems="10"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text=""

        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iViewFoto"
        app:layout_constraintEnd_toStartOf="@+id/iViewCarita"
        app:layout_constraintStart_toStartOf="@+id/eTextDecimal"
        app:layout_constraintTop_toTopOf="@+id/iViewFoto" />

    <EditText
        android:id="@+id/eTextDecimal2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_center"
        android:ems="10"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text=""

        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iViewFoto"
        app:layout_constraintEnd_toStartOf="@+id/iViewCarita"
        app:layout_constraintStart_toStartOf="@+id/eTextDecimal"
        app:layout_constraintTop_toTopOf="@+id/iViewFoto" />

</androidx.constraintlayout.widget.ConstraintLayout>
